generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Redirect {
  id          String   @id @default(cuid())
  shortCode   String   @unique
  targetUrl   String?
  userId      String   // Clerk User ID
  description String?
  active      Boolean  @default(true)
  startsAt    DateTime?
  expiresAt   DateTime?
  password    String?
  ogTitle     String?
  ogDescription String?
  ogImage     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  clicks      Click[]
  targetingRules TargetingRule[]
  tags        String[]
  qrCodeUrl   String?

  @@index([userId])
}

model Click {
  id          String   @id @default(cuid())
  redirectId  String
  redirect    Redirect @relation(fields: [redirectId], references: [id], onDelete: Cascade)
  timestamp   DateTime @default(now())
  userAgent   String?
  browser     String?
  os          String?
  device      String?
  ip          String?
  referrer    String?
  country     String?
  city        String?

  @@index([redirectId])
}

model TargetingRule {
  id          String   @id @default(cuid())
  redirectId  String
  redirect    Redirect @relation(fields: [redirectId], references: [id], onDelete: Cascade)
  type        String   // "device" or "geo"
  key         String   // "ios", "android", "US", "GB", etc.
  targetUrl   String
  createdAt   DateTime @default(now())

  @@index([redirectId])
}